<link rel="stylesheet" href="../products.css">
<main id="productsbody" class="container-fluid">
    <header>
        <h3 class="text-center">List of Products</h3>
    </header>
    {{#if user}}
        {{#eq user.role 'admin'}}
            <div class="welcome">
                <p>Welcome Admin, enjoy shopping!</p>
            </div>
        {{else}}
            <div class="welcome">
                <p>Welcome {{this.last_name}} , enjoy shopping!</p>
            </div>
        {{/eq}}
    {{/if}}
    
    <div class="items-product" id="product">
        <ul>
            {{#each docs}}
                <li><img class="img-fluid" src="{{this.thumbnail}}" alt=""></li>
                <li>Title: {{this.title}}</li>
                <a href="products/details/{{this._id}}" class="btn btn-dark" style="margin: 5px">Details</a>
                <hr>
            {{/each}}
        </ul>
    </div>
    <div class="text-center" style="margin-top: 20px">
        {{#if hasPrevPage}}
            <a href="/products?pageNumber={{prevPage}}" class="btn btn-dark" style="margin-right: 10px">Prev</a>
        {{/if}}
        <span class="page-number" style="margin-right: 10px">{{page}}</span>
        {{#if hasNextPage}}
            <a href="/products?pageNumber={{nextPage}}" class="btn btn-dark">Next</a>
        {{/if}}
    </div>
</main>